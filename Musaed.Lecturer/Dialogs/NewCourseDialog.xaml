<ContentDialog x:Class="Musaed.Lecturer.Dialogs.NewCourseDialog"
               xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
               xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
               xmlns:local="using:Musaed.Lecturer.Dialogs"
               xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
               xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
               mc:Ignorable="d"
               Title="New Course"
               PrimaryButtonText="Add"
               SecondaryButtonText="Close"
               PrimaryButtonClick="ContentDialog_PrimaryButtonClick"
               SecondaryButtonClick="ContentDialog_SecondaryButtonClick">

    <StackPanel>
        <TextBox x:Name="courseNameTxt" Header="Name"
                 Margin="10"
                 PlaceholderText="Course Name" />

        <TextBox x:Name="courseDescriptionTxt"
                     Header="Description"
                     Margin="10"
                     PlaceholderText="Course Description" MinHeight="200" />
        <TextBox x:Name="lecturerNameTxt" Header="Lecturer"
                 Margin="10"
                 PlaceholderText="Lecturer Name" />
    </StackPanel>
</ContentDialog>
